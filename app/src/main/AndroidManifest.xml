<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.organisation.gatepassscanner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.GatePassScanner">
        <activity
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:name=".admin.AdminSettings"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:name=".admin.AdminScanQRCode"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:name=".admin.AdminScanDetails"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:name=".admin.AdminAllScans"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:name=".admin.AdminHome"
            android:exported="true" />
        <activity
            android:name=".staff.Settings"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".staff.BadgeDetails"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".shared_components.Login"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".shared_components.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".staff.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
    </application>

</manifest>